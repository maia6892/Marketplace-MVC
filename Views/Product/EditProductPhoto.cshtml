@model EditProductPhotoViewModel

<h2>Manage Photos</h2>

<div class="form-group">
    <label>Existing Photos</label>
    <div>
        @foreach (var photo in Model.ExistingPhotos)
        {
            <div class="form-check">
                <img src="@photo.FilePath" alt="Product photo" style="width: 100px; height: 100px; margin: 5px;" />
                
                <!-- Форма для удаления одного фото -->
                <form asp-action="DeletePhoto" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="productId" value="@Model.ProductId" />
                    <input type="hidden" name="photoId" value="@photo.Id" />
                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                </form>
            </div>
        }
    </div>
</div>



<div class="mt-3">
    <a asp-action="EditProduct" asp-route-productId="@Model.ProductId" class="btn btn-secondary">Back to Edit Product</a>
</div>